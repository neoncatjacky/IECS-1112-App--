<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_food1"
                android:layout_width="98dp"
                android:layout_height="94dp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/p1" />

            <TextView
                android:id="@+id/tv_food1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="妙蛙種子"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_food1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="加入購物車" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_food2"
                android:layout_width="98dp"
                android:layout_height="94dp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/p2" />

            <TextView
                android:id="@+id/tv_food2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="妙蛙草"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_food2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="加入購物車" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_food3"
                android:layout_width="98dp"
                android:layout_height="94dp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/p3" />

            <TextView
                android:id="@+id/tv_food3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="妙蛙花"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_food3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="加入購物車" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_checkcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看購物車" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>